# Development Environment Configuration
# This file is used when NODE_ENV=development or running npm run dev

# API Configuration
VITE_API_URL=http://localhost:8080
VITE_API_BASE_URL=http://localhost:8080/api

# Application Configuration
VITE_APP_TITLE=DevBoard - Development
VITE_APP_VERSION=1.0.0-dev
VITE_APP_ENVIRONMENT=development

# Development Features
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_HOT_RELOAD=true

# JWT Configuration
VITE_JWT_STORAGE_KEY=devboard_token
VITE_JWT_EXPIRATION_WARNING_TIME=300000 # 5 minutes before expiry

# Development Server Configuration
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=0.0.0.0

# Debug Configuration
VITE_LOG_LEVEL=debug
VITE_SHOW_API_RESPONSES=true